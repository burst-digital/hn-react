{
  "name": "hn-react",
  "version": "0.0.0-development",
  "description": "The React implementation of Headless Ninja.",
  "main": "lib/index.js",
  "repository": {
    "url": "https://github.com/burst-digital/hn-react"
  },
  "author": "Bart Langelaan",
  "license": "MIT",
  "dependencies": {
    "get-nested": "^4.0.0",
    "prop-types": "^15.5.10",
    "react-async-bootstrapper": "^1.1.2",
    "util-deprecate": "^1.0.2"
  },
  "peerDependencies": {
    "hn": "^0.6.1",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "hn": "^0.6.1",
    "jest": "^22.3.0",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^12.4.1",
    "travis-deploy-once": "^4.3.4",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-config-prettier": "^1.8.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "start": "tsc --watch",
    "build": "rimraf lib && tsc",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release",
    "test": "yarn test:unit && yarn test:lint",
    "test:unit": "jest --coverage",
    "test:unit:update": "yarn test:unit -- -u",
    "test:lint": "prettier 'src/**/*.{js,ts,tsx}' -l --parser typescript && tslint 'src/**/*.{js,ts,tsx}'",
    "format": "prettier 'src/**/*.{js,ts,tsx}' --write -l --parser typescript && tslint 'src/**/*.{js,ts,tsx}' --fix"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "mapCoverage": true,
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(j|t)sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
